<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ccccee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeOnFragmentActivity">

    <TextView
        android:id="@+id/intro_on_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:text="@string/intro_on_fragment"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/detail_on_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_margin="16dp"
        android:text="@string/detail_on_fragment"
        app:layout_constraintTop_toBottomOf="@id/intro_on_fragment"
        />

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>